{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "src/*": ["./src/*"],
        "@/*": ["./node_modules/*"]
      },
      "target": "ESNext",
      "module": "NodeNext",
      "noEmit": true,
      "lib": [
          "DOM",
          "ES2020"
        ],
        "moduleResolution": "NodeNext"
    },
    //Add any build/compiled folders here to stop vscode searching those
    "exclude": ["dist"],
    "include": ["src/index.js", "node_modules/*"]
}